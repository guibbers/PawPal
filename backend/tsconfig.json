{
  "compilerOptions": {
    "target": "ES2021",
    "module": "CommonJS",
    "lib": ["ES2021"],
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "baseUrl": "./src",
"paths": {
  "@config/*": ["config/*"],
  "@routes/*": ["routes/*"],
  "@controllers/*": ["controllers/*"],
  "@types/*": ["types/*"]
},
  "include": ["src"],
  "exclude": ["node_modules"]
}