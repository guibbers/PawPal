// backend/prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
  output   = "../node_modules/.prisma/client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id             String   @id @default(uuid())
  name           String
  normalizedName String
  email          String   @unique
  password       String
  phone          String
  role           Role
  pets           Pet[]
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
}

model Pet {
  id             String   @id @default(uuid())
  name           String
  normalizedName String
  type           PetType  @default(DOG)
  breed          String?
  age            Int?
  tutor          User     @relation(fields: [tutorId], references: [id])
  tutorId        String
  photos         Photo[]
  neutered       Boolean
  sex            Sex      @default(UNKNOWN)
  notes          String?
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
}

model Photo {
  id        String   @id @default(uuid())
  url       String
  pet       Pet      @relation(fields: [petId], references: [id])
  petId     String
  createdAt DateTime @default(now())
}

enum Role {
  MANAGER
  RECEPCIONIST
  MONITOR
  TUTOR
}

enum PetType {
  DOG
  CAT
  FERRET
  BIRD
  FISH
  OTHER
}

enum Sex {
  MALE
  FEMALE
  UNKNOWN
}
